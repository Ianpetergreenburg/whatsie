<div class="profile"></div>

<% if current_user && current_user_id.to_s == @profile_id %>
  <h1>Welcome, <%= @user.username %></h1>
  <h3> Your Recipes! </h3>
<% else %>
  <h1>Welcome to <%= @user.username %>'s profile</h1>
  <h3> <%= @user.username %>'s Saved Recipes! </h3>
<% end %>
<% @user.recipes.each do |recipe| %>
  <div class="recipe">
    <h2><%= recipe.name %></h2>
    <p> recipe source: <a href="<%= recipe.url %>">New York Times Cooking</a></p>
    <% if recipe.image_url %>
      <img class="recipe-image" src="<%= recipe.image_url %>">
    <% end %>
    <h3>Prep</h3>
    <h4>Instructions</h4>
    <%= recipe.instructions.html_safe %>
    <h4>Ingredients</h4>
    <%= recipe.ingredients.html_safe %>
    <% if current_user && current_user_id.to_s != @profile_id %>
      <%= render partial: 'partials/new_recipe', locals: {recipe: Recipe.new, url: recipe.url, img_url: recipe.image_url, instructions: recipe.instructions, ingredients: recipe.ingredients, name: recipe.name} %>
    <% end %>
  </div>
<% end %>

