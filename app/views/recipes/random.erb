<% @recipes = @recipes["response"]["docs"] %>
<% @recipes = [@recipes[0]] %>
<% @recipes.each do |doc| %>
  <% url = doc["web_url"] %>
  <% if url_exist?(url) %>
    <div class="recipe">
      <h2><%= name = doc["headline"]["name"] %></h2>

      <p>url: <%= url %> </p>
      <p>lead paragraph: <%= doc["lead_paragraph"].html_safe %></p>


      <% img_url = '' %>
      <% doc["multimedia"].each do |media| %>
        <% if media["subtype"] != 'thumbnail' %>
          <% img_url = "http://www.nytimes.com/#{media["url"]}" %>
          <img class="recipe-image" src="<%= img_url %>">
        <% end %>
      <% end %>

      <h3>Prep</h3>
      <% preparation = scrape_this(url) %>
      <h4>Instructions</h4>
      <% instructions = scrape_ny_instructions(preparation) %>
      <%= instructions.to_s.html_safe %>
      <h4>Ingredients</h4>
      <% ingredients = scrape_ny_ingredients(preparation) %>
      <%= ingredients.to_s.html_safe %>
      <% if current_user %>
        <%= render partial: 'partials/new_recipe', locals: {recipe: @recipe, url: url, img_url: img_url, instructions: noko_to_s(instructions), ingredients: noko_to_s(ingredients), name: name} %>
      <% end %>
    </div>
  <% end %>
<% end %>


