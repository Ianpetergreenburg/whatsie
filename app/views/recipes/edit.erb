<div class="recipe-page" id="<%= @recipe.id %>">
  <div class='container'>
    <h2 class='recipe-header'><span class='recipe-title'> <%= @recipe.name %></span> <span class='glyphicon glyphicon-pencil blue edit-header'></span></h2>

    <h4 class ='recipe-source'>Recipe Source: <a href="<%= @recipe.url %>"><strong><%= @recipe.source %></strong></a></h4>
    <% if @recipe.image_url %>
      <img class="recipe-image" src="<%= @recipe.image_url %>">
    <% end %>
    <div class='prep-container container'>
      <h3 id='prep-header'>Preperation</h3>
      <div class='col-md-4 ingredients'>
        <div id='ing-flash-container'></div>
        <h4 class='ingredients-header'>Ingredients <button class='btn btn-xs btn-info' id='save-ingredients'>Save Ingredients</button></h4>
        <ul id='ingredients-list' class='edit-ingredients-list'>
          <% @recipe.ingredients.each do |recipe_ingredient| %>
            <li class='edit-list-item'>
              <table class='ingredients-list-table'>
                <tr>
                  <td class='ingredient-move'>
                    <span class="ingredient-move" aria-hidden="true">☰</span>
                  </td>
                  <td class='ingredient-content'><%= recipe_ingredient %></td>
                  <td class='edit-ingredient-cell align-top'>
                    <span class='glyphicon glyphicon-pencil blue edit-ingredient'></span>
                    <span class='delete-ingredient'>✖</span>
                  </td>
                </tr>
              </table>
            </li>
          <% end %>
        </ul>
        <div class='form-group' id='addIngredientBox'>
          <button class='btn btn-success' id='add-ingredient'>Add Ingredient</button>
        </div>
      </div>
      <div class='col-md-8 instructions'>
        <div id='ins-flash-container'></div>
        <h4 class='instructions-header'>Instructions <button class='btn btn-xs btn-info' id='save-instructions'>Save Instructions</button></h4>
        <ol id='instructions-list'>
          <% @recipe.instructions.each do |instruction| %>
            <li class='edit-list-item'>
              <table class='list-table'>
                <tr>
                  <td class='instruction-move'>
                    <span class="instruction-move" aria-hidden="true">☰</span>
                  </td>
                  <td class='instruction-content'><%= instruction.instruction %></td>
                  <td class='edit-instruction-cell align-top'>
                    <span class='glyphicon glyphicon-pencil blue edit-instruction'></span>
                    <span class='delete-instruction'>✖</span>
                  </td>
                </tr>
              </table>
            </li>
          <% end %>
        </ol>
        <div class='form-group' id='addInstructionBox'>
          <button class='btn btn-success' id='add-instruction'>Add Step</button>
        </div>
      </div>
    </div>

  </div>
</div>
<script>at_edit = true</script>
