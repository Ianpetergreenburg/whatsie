<% if current_user.recipes.include? recipe %>
  <% button_state = 'Saved!' %>
<% else %>
  <% button_state = 'Save To Recipe Book' %>
<% end %>

<%= form_for RecipeBook.new, url: "/recipe_books", html: {class: "save-recipe", remote: true} do |t| %>
  <%= t.hidden_field :recipe_id, value: recipe.id %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <%= t.submit button_state %>
<% end %>
