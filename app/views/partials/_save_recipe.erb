<% if current_user %>
  <% if current_user.saved_recipes.include? recipe %>
    <% button_state = 'Saved!' %>
    <% button_class = 'btn-success' %>
  <% else %>
    <% button_state = 'Save To Recipe Book' %>
    <% button_class = 'btn-primary' %>
  <% end %>

  <%= link_to button_state, recipe_books_path, {class: "save-recipe-btn btn #{button_class}", id: "#{recipe.id}"} %>
<% end %>
